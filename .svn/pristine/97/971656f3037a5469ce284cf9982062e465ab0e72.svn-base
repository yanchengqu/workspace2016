.wdTraffic-page {
  padding-bottom: 62px;
  background-color: #fff;
}

.wdTraffic-page .menu {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}
.wdTraffic-page .fixed {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
}

.wdTraffic-page
.chart {
  background-color: #f4f4f4;
}

.wdTraffic-page
.traffic-total {
  padding: 14px 0;
  background-color: #fff;
}

.wdTraffic-page
.traffic-total
.pull-left {
  position: relative;
  width: 50%;
  height: 50px;
  color: #000;
  text-align: center;
}

.wdTraffic-page
.traffic-total
.pull-left::after {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  content: '';
  width: 1px;
  height: 100%;
  background-color: #efefef;
}

.wdTraffic-page
.traffic-total
.pull-left:last-child::after {
  display: none;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
.wdTraffic-page
.revenue-total
.pull-left:first-child::after {
      -webkit-transform: scaleX(.5);
      transform: scaleX(.5);
  }

}

.wdTraffic-page
.traffic-total
.pull-left span {
  display: inline-block;
  line-height: 20px;
  padding: 7px 0;
  font-size: 20px;
}

.wdTraffic-page
.traffic-total
.pull-left div {
  color: #6e6e6e;
  font-size: 12px;
}

.wdTraffic-page
.traffic-total
.pull-left div::before {
	overflow: hidden;
	content:'';
	display: inline-block;
	width: 7px;
	height: 7px;
	margin-right: 12px;
	background-color: #f02864;
	-webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
}

.wdTraffic-page
.traffic-total
.pull-left:last-child div::before {
	background-color: #32beff;
}

.wdTraffic-page
.list {
  overflow: hidden;
  width: 100%;
}

.wdTraffic-page
.list::after { display: none; }

.wdTraffic-page
.list__item {
  overflow: hidden;
  padding: 0 12px ;
  font-size: 14px;
}

.wdTraffic-page
.list__item::after {
 position: absolute;
 left: 12px;
 bottom: 0;
}

.wdTraffic-page
.doughnut {
	position: relative;
	margin: 0 12px;
}

.wdTraffic-page
.doughnut-title {
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	width: 160px;
    height: 160px;
    line-height: 160px;
	font-size: 15px;
	color: #000;
	text-align: center;
}

.wdTraffic-page
.doughnut-legend {
	position: absolute;
	top: 30px;
	left: 180px;
}

.wdTraffic-page
.doughnut-legend li {
	line-height: 20px;
	font-size: 14px;
}

.wdTraffic-page
.doughnut-legend span {
	display: inline-block;
	width: 8px;
	height: 8px;
	margin-right: 5px;
	vertical-align: middle;
}


