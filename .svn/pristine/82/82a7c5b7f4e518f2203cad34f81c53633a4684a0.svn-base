.retrievePasswd-page {
  /* padding-bottom: 50px; */
  background-color: #fff;
}

.retrievePasswd-page .wrapper{
  overflow: hidden;
  padding: 0 12px;
}

.retrievePasswd-page
.list__item {
  overflow: hidden;
  padding: 0 0;
}

.retrievePasswd-page
.list__item::after {
  clear: both;
}

.list::before, 
.list::after {
  display: none;
}

.retrievePasswd-page 
.list__item:last-child::after {
  display: block;
}

.retrievePasswd-page 
.pull-left--w1 {
  width: 100%;
  padding-right: 100px;
  margin-right: -100px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.retrievePasswd-page 
.pull-right--w1 {
  width: 100px;
  text-align: right;
}

.retrievePasswd-page 
.pull-left--w2 {
  width: 100%;
  padding-right: 25px;
  margin-right: -25px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.retrievePasswd-page 
.pull-right--w2 {
  width: 25px;
  text-align: right;
}

.retrievePasswd-page 
.pull-left--w3 {
  width: 100%;
  padding-right: 95px;
  margin-right: -95px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.retrievePasswd-page 
.pull-right--w3 {
  width: 95px;
}

.retrievePasswd-page
.list__item i {
  vertical-align: middle;
}

.retrievePasswd-page
.list__item .input-wrapper {
  margin-left: 35px;
}

.retrievePasswd-page
.list__item input {
  width: 100%;
  height: 30px;
  border: none;
  margin-bottom: 0;
  color: #000;
  font-size: 15px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-tap-highlight-color: transparent;
}


.retrievePasswd-page
.captcha {
  display: inline-block;
  width: 100%;
  padding-left: 10px;
  height: 30px;
  border-left: 1px solid #efefef;
  vertical-align: middle;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.retrievePasswd-page
.captcha img {
  width: 85px;
  height: 30px;
  line-height: 30px;
  vertical-align: top;
}

.retrievePasswd-page 
.btn-large {
  display: block;
  background-color: #32beff;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}

.retrievePasswd-page 
.btn-large {
  margin-bottom: 10px;
}

.retrievePasswd-page 
.tips {
  margin: 12px 0;
  color: #6d6e71;
  font-size: 13px;
}