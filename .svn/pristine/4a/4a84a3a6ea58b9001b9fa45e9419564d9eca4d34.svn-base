.wdRevenue-page {
  padding-bottom: 62px;
  background-color: #f4f4f4;
}

.wdRevenue-page .menu {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}
.wdRevenue-page .fixed {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
}

.wdRevenue-page
.revenue-total {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  padding: 14px 0;
  margin-bottom: 12px;
  background-color: #fff;
}

.wdRevenue-page
.revenue-total
.pull-left {
  position: relative;
  float: none;
  width: 50%;
  height: 50px;
  color: #000;
  text-align: center;
  -webkit-flex: 1;
  -moz-flex: 1;
  -ms-flex: 1;
  -o-flex: 1;
  flex: 1;
}

.wdRevenue-page
.revenue-total
.pull-left::after {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  content: '';
  width: 1px;
  height: 100%;
  background-color: #efefef;
}

.wdRevenue-page
.revenue-total
.pull-left:last-child::after {
  display: none;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
.wdRevenue-page
.revenue-total
.pull-left:first-child::after {
      -webkit-transform: scaleX(.5);
      transform: scaleX(.5);
  }

}

.wdRevenue-page
.revenue-total
.pull-left span {
  display: inline-block;
  line-height: 20px;
  padding: 7px 0;
  font-size: 20px;
}

.wdRevenue-page
.revenue-total
.pull-left div {
  color: #6e6e6e;
  font-size: 12px;
}

.wdRevenue-page
.list {
  overflow: hidden;
  width: 100%;
}

.wdRevenue-page
.list__item {
  overflow: hidden;
  padding: 0 12px ;
  font-size: 15px;
}

.wdRevenue-page
.list__item::after {
 position: absolute;
 left: 12px;
 bottom: 0;
}

.wdRevenue-page
.btn-info {
  display: block;
  margin: 0 9px;
  background-color: #32beff;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
}