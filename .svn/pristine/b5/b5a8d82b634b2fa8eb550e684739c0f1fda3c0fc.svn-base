.basket-page {
  padding-bottom: 48px;
  background-color: #fff;
}

.basket-page 
.fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
}

.basket-page
.text-warning {
	color: #f02864;
}

.basket-page
.text-muted {
  color: #6e6e6e;
}


.basket-page 
.swiper-container{
  position: relative; 
  overflow: hidden;
  /* width: 320px;
  height: 175px; */
  width: 100%;
  height: 100%;
}

