.msg-page {
  padding-bottom: 50px;
  background-color: #fff;
}

.msg-page
.nav {
  position: relative;
  z-index: 10;
}

.msg-page 
.msg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  padding-top: 45px;
  text-align: center;
}

.msg-page 
.msg__img {
  width: 104px;
  height: 104px;
  margin: 64px auto 28px;
}

.msg-page 
.msg__img img {
  width: 100%;
  vertical-align: middle;
}

.msg-page 
.msg__tips {
  line-height: 20px;
  color: #000;
  font-size: 17px;
}

.msg-page 
.msg__suggest {
  padding-top: 16px;
  color: #6e6e6e;
  font-size: 14px;
}

.msg-page
.msg__btn-wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}

.msg-page
.msg__btn-wrapper
.btn {
  display: block;
  margin: 9px;
  background-color: #32beff;
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
}