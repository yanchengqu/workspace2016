.login-page {
  /* padding-bottom: 50px; */
  background-color: #fff;
}

.login-page
.fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

.login-page 
.portrait{
  width: 84px;
  height: 84px;
  /* padding: 44px 0; */
  padding: 20px 0;
  margin: 0 auto;
}

.login-page 
.portrait img {
  width: 100%;
  vertical-align: middle;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  -webkit-box-shadow: 0 0 0 3px #32beff;
  box-shadow: 0 0 0 3px #32beff;
}

.login-page .wrapper{
  overflow: hidden;
  padding: 0 12px;
}

.login-page
.list__item {
  overflow: hidden;
  padding: 0 0;
}

.list::before, 
.list::after {
  display: none;
}

.login-page 
.list__item:last-child::after {
  display: block;
}

.login-page
.list__item i {
  vertical-align: middle;
}

.login-page
.list__item .input-wrapper {
  margin-left: 35px;
}

.login-page
.list__item input {
  width: 100%;
  height: 30px;
  border: none;
  margin-bottom: 0;
  color: #000;
  font-size: 15px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-tap-highlight-color: transparent;
}

.login-page 
.btn {
  display: block;
  background-color: #32beff;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}

.login-page 
.btn {
  margin-bottom: 10px;
}

.login-page
.wrapper
.text-right a {
  color: #6d6e71;
  font-size: 14px;
  text-decoration: none;
}

.login-page
.otherLogin {
  padding: 0 12px;
}

.login-page
.otherLogin div {
  position: relative;
  text-align: center;
}

.login-page
.otherLogin 
div::after {
  position: absolute;
  left: 0;
  top: 50%;
  z-index: -1;
  display: block;
  content: '';
  width: 100%;
  height: 1px;
  background-color: #efefef;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
  .login-page .otherLogin div::after {
      -webkit-transform: scaleY(0.5);
      transform: scaleY(0.5);
  }
}

.login-page
.otherLogin span {
  padding: 0 14px;
  color: #6d6e71;
  font-size: 14px;
  background-color: #fff;
}

.login-page
.otherLogin ul {
  padding: 20px 0;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
}

.login-page
.otherLogin li {
  text-align: center;
  -webkit-flex: 1;
  -moz-flex: 1;
  -ms-flex: 1;
  -o-flex: 1;
  flex: 1;
}

.login-page
.otherLogin img {
  width: 51px;
  height: auto;
}