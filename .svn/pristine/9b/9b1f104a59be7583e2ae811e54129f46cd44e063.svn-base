.mark-gray {
    color: #959595;
}

.font-large {
    font-size: 24px;
}

.font-middle {
    font-size: 20px;
}

.detail-head {
    margin-bottom: 40px;
    line-height: 1.7;
    font-size: 18px;
}

.mark-red {
    color: #ed1b23;
}

.font-small {
    font-size: 12px;
}

.font-base {
    font-size: 14px;
}

a{
    text-decoration:none;
}

.product-item .container {
    width: 100%;
}

.product-item .header .container,
.product-item .footer .container {
    width: 1000px;
}
.promos li img {
    vertical-align: middle;
    border: 0 none;
    width: 100%;
}

.layout__promos--head {
    width: 100%;
    margin: 0 auto;
    /*padding: 0 10px;*/
    background-color: #fff;
    background: rgba(255,255,255,.95);
    position: static;
	/* padding-bottom: 10px; */

}
.promos-data {
    width: 1000px;
    margin: 0 auto;
    height: 52px;
    line-height: 52px;
	overflow: hidden;
}

.promos-data-wrap {
    width: 100%;
    border-bottom: 1px #ccc solid;
    background-color: #fff;
}
.product-name {
    float: left;
}
.product-name span {
    margin-right: 10px;
}
.product-operate {
    float: right;
}
.product-operate .price {
    color:#000;
    margin-right: 10px;
}
.product-operate .btn-important {
    vertical-align: middle;
	margin-right: 0;
}

.promos-nav {
    width: 100%;
    /*margin-top: 27px;*/
    text-align: center;
    padding: 20px 0 10px;
}
.promos-nav a {
    display: inline-block;
    margin: 0 17px;
    color: #545454;
    width: 125px;
     /*padding-top: 78px;
    background: url(http://static.tongshuai.com/r/build/ts/v1/img/pages/product_title.png) 0 0 no-repeat;
     */
	text-align: center;
    font-size: 12px;
}

.promos-nav a span {
	display: inline-block;
	_display: inline;
	_zoom:1;
	width: 100%;
}
/* .promos-nav .title-img2 {
    background-position: 0 -111px;
}

.promos-nav .title-img3 {
    background-position: 0 -226px;
}

.promos-nav .title-img4 {
    background-position: 0 -340px;
}
 */

.operate--handle {
    vertical-align: middle;
    cursor: pointer;
    margin-left: 10px;
}

.promos--fixed {
    position: fixed;
    z-index: 100;
    top: 0;
}

.promos--fixed .promos-nav {
    display: none;
}

.holder {
    position: relative;
    overflow: hidden;
    clear: both;
    font-size: 0;

}


.topbar__crumbs {
	padding: 20px 0;
	margin-top: 20px;
	width: 1000px;
	margin: 0 auto;
}

.topbar__crumbs a,.topbar__crumbs span ,.product-name a{
	color: #333;
	font-size: 16px;
	/* margin-right: 2px; */
}

.topbar__crumbs .mark-gray,.product-name .mark-gray {
	color: #959595;
}

.topbar__crumbs .split-line,.product-name .split-line {
	border-left: 1px solid #333;
    background-color: #333;
}

.topbar__crumbs a:hover,.product-name a:hover {
	text-decoration: underline;
}

/* gotop */
html {
    overflow-y: scroll;
}

.sbar-tools {
    position: fixed;
    _position: absolute;
    right: 0.5%;
    bottom: 30px;
    z-index: 2999;
}

.sbar-tools .gotop {
    width: 36px;
    height: 36px;
}

.sbar-tools .gotop a {
    display: block;
    width: 36px;
    height: 36px;
    background: url(http://static.tongshuai.com/r/build/ts/v1/img/icons/gotop.png) 0 0 no-repeat;
}
















