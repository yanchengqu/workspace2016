	<div class="item order-ps">
		<div class="item-head">
			<div class="item-head__inner">订单备注</div>
		</div>
		<div class="item-body">
			<input type="text" name="" id="" placeholder="请填写订单备注信息">
		</div>
	</div>

	</form>	

	<div class="fixed">
		<!-- 底部结算工具条 -->
		<div class="toolbar">
			<div class="toolbar__left">
				合计：<span class="totalPrice">&yen;32,434</span>
			</div>
			<div class="toolbar__right">
				<a class="cart-btn cart-btn-pay" id="J_pay" href="javascript:;">提交订单</a>
			</div>
		</div>
