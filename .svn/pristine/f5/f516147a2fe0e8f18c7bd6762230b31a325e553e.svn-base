.wdStyleChoice-page {
  background-color: #f4f4f4;
}

.wdStyleChoice-page
.nav::after {}

.wdStyleChoice-page .fixed {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
}

.wdStyleChoice-page
.list {
  overflow: hidden;
  display: block;
  padding: 12px;
  margin: 0 auto;
  background-color: transparent;
}

.wdStyleChoice-page
.list::before,
.wdStyleChoice-page
.list::after {
  display: none;
}

.wdStyleChoice-page
.list__item {
  float: left;
  overflow: hidden;
  width: 50%;
  padding-left: 6px;
  margin-bottom: 12px;
  font-size: 15px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.wdStyleChoice-page .list__item:nth-child(odd) {
  padding-right: 6px;
  padding-left: 0;
}

.wdStyleChoice-page
.list__item img {
  width: 100%;
  vertical-align: top;
}

.wdStyleChoice-page
.list__item::after {
  display: none;
}

.wdStyleChoice-page
.list__item .wrapper {
  position: relative;
}

.wdStyleChoice-page
.list__item .btn-wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}

.wdStyleChoice-page
.list__item .btn {
  display: block;
  margin: 9px;
  /* background-color: #32beff; */
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}

.wdStyleChoice-page
.list__item .checkbox {
  position: relative;
  top: 1px;
  margin-right: 5px;
  vertical-align: top;
}

.wdStyleChoice-page
.list__item.cur .btn-line {
  color: #32beff;
  border-color: #32beff;
  background-color: #fff;
}